@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;

@{
    ViewData["Title"] = "LoginAdmin";
}

<h1>Login</h1>
@{
    string mess = HttpContextAccessor.HttpContext.Session.GetString("mess") ?? "";
}
<hr />
<a class="text-dark" asp-area="" asp-controller="Home" asp-action="LoginAdmin">Login Admin</a>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label for="UserName" class="control-label">User name:</label>
                <input name="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password:</label>
                <input name="Password" type="password" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<a class="text-dark" asp-area="" asp-controller="Customer" asp-action="Create">Register</a>
@{ if (mess != "")
    {
        <p class="text-danger">@mess</p>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}