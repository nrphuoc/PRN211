@{
    ViewData["Title"] = "Home Page";
}

<section class="featured spad">
    <div class=" container row" id="myTable">
        @{
            foreach (Product p in ViewBag.Product)
            {

                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fastfood">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@p.Image">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="Cart/AddToCart?id=@p.ProId"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>   
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@p.ProName</a></h6>
                            <h5>@p.Price</h5>
                        </div>
                    </div>
                </div>

            }
        }
     </div>
 </section>

<nav>
    @{
        var pre = ViewBag.page - 1;
        var next = ViewBag.page + 1;

    }

    @if (ViewBag.numberPage > 1)
    {
        <ul class="pagination pagination-rounded mb-0">
            <li class="page-item">
                <a class="page-link" href="Home/Index?page=@pre" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (var i = 1; i < ViewBag.numberPage; i++)
            {
                @if (i == ViewBag.page)
                {
                    <li class="page-item active"><a class="page-link" href="Home/Indexpage=@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="Home/Index?page=@i">@i</a></li>
                }

            }
            <li class="page-item">
                <a class="page-link" href="Home/Index?page=@next" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    }
</nav>

