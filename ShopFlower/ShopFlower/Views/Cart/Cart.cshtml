@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Preloder -->
<section class="shoping-cart spad">
    <div class="container">
        @{ int t = 0;
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <form asp-action="AddToCart">
                        <table>

                            <thead>
                                <tr>
                                    <th class="shoping__product">Products</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.cart == null)
                                {
                                    <p>empty</p>
                                }
                                else
                                {


                                    @foreach (var key in ViewBag.cart.Keys)
                                    {
                                        Dictionary<string, string> productAttr = ViewBag.cart[key];
                                        <tr>
                                            <td class="shoping__cart__item">
                                                <img src="img/cart/@productAttr["Image"]" alt="">
                                                <h5>@productAttr["Proname"]</h5>
                                            </td>
                                            <td class="shoping__cart__price">
                                                @productAttr["Price"]
                                            </td>
                                            <td class="shoping__cart__quantity">
                                                <div class="quantity">
                                                    <div class="pro-qty">
                                                        <input type="text" value="@productAttr["Quantity"]">
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="shoping__cart__total">
                                                @productAttr["Total"]
                                            </td>
                                            <td class="shoping__cart__item__close">
                                                <span class="icon_close"></span>
                                            </td>
                                        </tr>
                                        //t += Convert.ToInt32(productAttr["Total"]);
                                    }

                                }
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home" asp-action="Index" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Upadate Cart
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div >
                    <h5>Cart Total</h5>
                    <ul>
                        <li></li>
                        <li>Total <span>@ViewBag.Total</span></li>
                    </ul>
                    <a asp-controller="Cart" asp-action="CheckOut" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
                            }
    </div>
</section>
