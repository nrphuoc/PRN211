@{ 
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1>Store Manage</h1>

<p>
    <a href="/admin/store/create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                StoreId
            </th>
            <th>
                Storename
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in ViewBag.listStore)
        {
            <tr>
                <td>@store.StoreId</td>
                <td>@store.Storename</td>
                <td>@store.Phone</td>
                <td>@store.Email</td>
                <td>@store.Address</td>
                <td><a href="/admin/store/edit?id=@store.StoreId">Edit</a> | <a href="/admin/store/delete?id=@store.StoreId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<nav>
    @{
        var pre = ViewBag.page - 1;
        var next = ViewBag.page + 1;

    }

    @if (ViewBag.numberPage > 1)
    {
        <ul class="pagination pagination-rounded mb-0">
            <li class="page-item">
                <a class="page-link" href="/admin/store/index?page=@pre" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (var i = 1; i < ViewBag.numberPage; i++)
            {
                if (i == ViewBag.page)
                {
                    <li class="page-item active"><a class="page-link" href="/admin/store/index?page=@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/admin/store/index?page=@i">@i</a></li>
                }

            }
            <li class="page-item">
                <a class="page-link" href="/admin/store/index?page=@next" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>


    }
</nav>
