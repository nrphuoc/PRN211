@model ShopFlower.Models.Stock

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="StoreId" value="@ViewBag.stock.StoreId" />
            <input type="hidden" name="ProductId" value="@ViewBag.stock.ProductId"/>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Quantity</label>
                <input type="number" name="Quantity" class="form-control" value="@ViewBag.stock.Quantity"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/admin/stock/index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
